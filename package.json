{
  "name": "spotbot",
  "version": "1.0.0",
  "description": "A Discord bot for The PokeSpot!",
  "main": "build/app.js",
  "scripts": {
    "test": "tsc && mocha './build/tests/*/*.spec.*' --recursive --timeout 60000 --exit && ng test",
    "start": "node ./build/src/app.js",
    "dev": "nodemon",
    "serve": "ng serve",
    "build": "ng build",
    "build-gh": "ng build --deploy-url /PokeUtils/ --base-href /PokeUtils/",
    "watch": "ng build --watch --configuration development"
  },
  "author": "JakeSaintG",
  "license": "ISC",
  "dependencies": {
    "discord.js": "^12.5.3",
    "dotenv": "^10.0.0",
    "npm": "^8.13.2"
  },
  "devDependencies": {
    "@types/chai": "^4.3.4",
    "@types/mocha": "^10.0.1",
    "@types/node": "^17.0.29",
    "chai": "^4.3.7",
    "mocha": "^10.2.0",
    "nodemon": "^1.19.4",
    "ts-node": "^10.7.0",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4"
  }
}
